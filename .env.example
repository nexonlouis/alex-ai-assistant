# Alex AI Assistant - Environment Variables
# Copy this file to .env and fill in your values

# ===========================================
# Neo4j AuraDB Configuration
# ===========================================
NEO4J_URI=neo4j+s://YOUR_INSTANCE.databases.neo4j.io
NEO4J_USERNAME=neo4j
NEO4J_PASSWORD=your_password_here
NEO4J_DATABASE=neo4j

# ===========================================
# Google AI (Gemini) Configuration
# ===========================================
GOOGLE_API_KEY=your_google_api_key
GOOGLE_PROJECT_ID=your_gcp_project_id
GOOGLE_REGION=us-central1

# ===========================================
# Anthropic (Claude Code) Configuration
# ===========================================
ANTHROPIC_API_KEY=your_anthropic_api_key

# ===========================================
# Application Configuration
# ===========================================
APP_ENV=development
LOG_LEVEL=INFO
PORT=8080

# Cortex Configuration
FLASH_MODEL=gemini-3-flash-preview
PRO_MODEL=gemini-3-pro-preview
COMPLEXITY_THRESHOLD=0.7

# Memory Configuration
EMBEDDING_MODEL=text-embedding-004
EMBEDDING_DIMENSIONS=1536
SUMMARIZATION_BATCH_SIZE=100

# ===========================================
# GCP Secret Manager (Production)
# ===========================================
# In production, use Secret Manager references instead:
# NEO4J_PASSWORD=projects/PROJECT_ID/secrets/neo4j-password/versions/latest
